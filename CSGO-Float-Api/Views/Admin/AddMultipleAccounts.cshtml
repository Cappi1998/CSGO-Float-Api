
<div class="container rounded bg-white mt-5">

    <form method="post" asp-action="AddMultipleAccounts" asp-controller="Admin">

        <div class="row mt-2">
            <div class="mb-2">

                @if (TempData["MSG_Sucess"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Well done!</strong> @Html.Raw(TempData["MSG_Sucess"])
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                }

                @if (TempData["MSG_Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> @Html.Raw(TempData["MSG_Error"])
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <label class="mb-2">Input Format: {login:pass:shared_secret}</label>
                <div class="form-group mb-2">
                    <textarea name="list" class="form-control" placeholder="login:pass:shared_secret" rows="20" required></textarea>
                </div>

                <div class=" form-group">
                    <div class="mt-5">
                        <button class="btn btn-primary" type="submit">Save</button>
                        <a asp-action="AccountList" asp-controller="Admin" class="btn btn-secondary">Back</a>
                    </div>
                </div>

            </div>
        </div>

    </form>


</div>


<style>
    body {
        background: #808080
    }
</style>